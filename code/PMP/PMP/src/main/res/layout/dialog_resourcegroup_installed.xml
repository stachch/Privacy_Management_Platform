<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pmp="http://schemas.android.com/res/de.unistuttgart.ipvs.pmp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical" >

    <de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleView
        android:id="@+id/Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleViewCompact
                pmp:name="@string/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                pmp:icon="@drawable/icon_info" >
            </de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleViewCompact>

            <TextView
                android:id="@+id/TextView_Description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp" />
            
            <de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleViewCompact
                pmp:name="@string/revision"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                pmp:icon="@drawable/icon_info" >
            </de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleViewCompact>

            <TextView
                android:id="@+id/TextView_Revision"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp" />

            <de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleViewCompact
                pmp:name="@string/privacy_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                pmp:icon="@drawable/icon_rgs" >
            </de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleViewCompact>

            <LinearLayout
                android:id="@+id/LinearLayout_PrivacySettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/Button_Uninstall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/uninstall" />

        <Button
            android:id="@+id/Button_Close"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/close" />
    </LinearLayout>

</LinearLayout>