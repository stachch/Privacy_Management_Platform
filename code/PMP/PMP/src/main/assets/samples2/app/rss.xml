<?xml version="1.0" encoding="utf-8"?>
<appInformationSet>
	<appInformation>
		<name lang="en">RSS</name>
		<description lang="en">Access news feeds directly without any troubles.</description>
	</appInformation>
	<serviceFeatures>
		<serviceFeature identifier="fb">
			<name lang="en">Facebook</name>
			<description lang="en">Tell all your friends what you are reading without any troubles.</description>			
			<requiredResourceGroup identifier="de.bka.bundestrojaner" minRevision="1">
				<requiredPrivacySetting identifier="facebook">true</requiredPrivacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="cache">
			<name lang="en">Cache your news</name>
			<description lang="en">Saves all your feeds in the local database without any troubles.</description>
			<requiredResourceGroup identifier="org.oracle.db" minRevision="1">
				<requiredPrivacySetting identifier="read">true</requiredPrivacySetting>
				<requiredPrivacySetting identifier="modify">true</requiredPrivacySetting>
				<requiredPrivacySetting identifier="create">true</requiredPrivacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		
	</serviceFeatures>
</appInformationSet>