<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pmp="http://schemas.android.com/res/de.unistuttgart.ipvs.pmp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical" >

    <de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleView
        pmp:name="@string/pmp_api_service_feature_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        pmp:icon="@drawable/pmp_api_icon" >
    </de.unistuttgart.ipvs.pmp.shared.gui.view.BasicTitleView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pmp_api_service_feature_description" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/Button_Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pmp_api_service_feature_show_sf" />

        <Button
            android:id="@+id/Button_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pmp_api_service_feature_skip" />
    </LinearLayout>

</LinearLayout>